<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#B9F6CA"
    tools:context=".ContactDetails">

    <EditText
        android:id="@+id/etCName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/name_hint"
        android:textSize="30sp"
        android:inputType="textPersonName"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        />

    <EditText
    android:id="@+id/etPNumber"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:inputType="phone"
    android:gravity="center"
    android:hint="@string/phone_number_hint"
    android:textSize="30sp"
    android:background="@color/colorAccent"
    android:layout_marginTop="40dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    />

    <EditText
    android:id="@+id/etWAddress"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/web_address_hint"
    android:gravity="center"
    android:inputType="text"
    android:background="@color/colorAccent"
    android:textSize="30sp"
    android:layout_marginTop="40dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    />

    <EditText
    android:id="@+id/etHAddress"
    android:textSize="30sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="@string/home_address_hint"
    android:gravity="center"
    android:inputType="text"
    android:background="@color/colorAccent"
    android:layout_marginTop="40dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        >

        <ImageButton
            android:id="@+id/ibHappy"
            android:src="@drawable/happy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="40dp"

            />

        <ImageButton
            android:id="@+id/ibSad"
            android:src="@drawable/sad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="40dp"

        />

        <ImageButton
            android:id="@+id/ibNeutral"
            android:src="@drawable/neutral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="40dp"

        />

    </LinearLayout>



</LinearLayout>